{
  "name": "ca-law-portal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 3000",
    "dev:cluster": "next dev --turbopack --port 3001",
    "build": "next build --turbopack",
    "build:production": "next build --turbopack && next export",
    "start": "next start",
    "start:production": "next start --port 3000",
    "start:cluster": "next start --port 3001",
    "lint": "eslint",
    "cron": "node scripts/cron.js",
    "docker:build": "docker build -f Dockerfile.production -t accountant-ai:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.local accountant-ai:latest",
    "docker:compose:dev": "docker-compose up -d",
    "docker:compose:prod": "docker-compose -f docker-compose.production.yml up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "infrastructure:start": "docker-compose -f docker-compose.production.yml up -d redis-cluster kafka-cluster nginx",
    "infrastructure:stop": "docker-compose -f docker-compose.production.yml stop",
    "monitoring:start": "docker-compose -f docker-compose.production.yml up -d prometheus grafana",
    "monitoring:stop": "docker-compose -f docker-compose.production.yml stop prometheus grafana",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "load:test": "npm install -g artillery && artillery run load-test.yml"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.33.0",
    "@google-cloud/storage": "^7.17.1",
    "@google/generative-ai": "^0.24.1",
    "@huggingface/inference": "^4.11.3",
    "@neondatabase/serverless": "^1.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/puppeteer": "^5.4.7",
    "@xyflow/react": "^12.8.6",
    "ai": "^3.0.0",
    "axios": "^1.6.7",
    "cheerio": "^1.0.0-rc.12",
    "dagre": "^0.8.5",
    "date-fns": "^3.2.0",
    "dotenv": "^17.2.2",
    "google-auth-library": "^10.3.0",
    "googleapis": "^160.0.0",
    "groq-sdk": "^0.7.0",
    "ioredis": "^5.8.1",
    "jsdom": "^27.0.0",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "lucide-react": "^0.544.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "next": "15.5.4",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "playwright": "^1.55.1",
    "puppeteer": "^24.22.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-draggable": "^4.5.0",
    "rss-parser": "^3.13.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "svix": "^1.76.1",
    "uuid": "^9.0.1",
    "ws": "^8.18.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/cheerio": "^0.22.35",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.19",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^9.0.7",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
